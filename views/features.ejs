<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <title>Safety Features - SAFEHer</title>
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <!-- Font Awesome -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <style>
    :root {
      --primary: #ff4081;
      --primary-dark: #c60055;
      --secondary: #5c6bc0;
      --light: #f8f9fa;
      --dark: #343a40;
      --success: #28a745;
      --text: #333;
      --shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
    }

    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    body {
      color: var(--text);
      background-color: #fff;
      overflow-x: hidden;
    }

    /* Header Styles */
    header {
      background-color: #fff;
      box-shadow: var(--shadow);
      position: fixed;
      width: 100%;
      z-index: 1000;
      transition: all 0.3s ease;
    }

    header.scrolled {
      padding: 10px 0;
      background-color: rgba(255, 255, 255, 0.95);
    }

    .header-container {
      display: flex;
      justify-content: space-between;
      align-items: center;
      max-width: 1200px;
      margin: 0 auto;
      padding: 15px 20px;
    }

    .logo {
      font-weight: 700;
      color: var(--primary);
      font-size: 1.5rem;
      display: flex;
      align-items: center;
    }

    .logo a {
      display: flex;
      align-items: center;
      text-decoration: none;
      color: var(--primary);
    }

    .logo i {
      margin-right: 10px;
      transition: transform 0.5s cubic-bezier(0.175, 0.885, 0.32, 1.275);
    }

    .logo:hover i {
      transform: rotate(20deg) scale(1.1);
    }

    .header-buttons {
      display: flex;
      gap: 12px;
    }

    .header-buttons .btn {
      border-radius: 30px;
      font-weight: 500;
      padding: 8px 20px;
      transition: all 0.3s cubic-bezier(0.175, 0.885, 0.32, 1.275);
    }

    .btn-outline-primary {
      color: var(--primary);
      border: 2px solid var(--primary);
    }

    .btn-outline-primary:hover {
      background-color: var(--primary);
      color: white;
      transform: translateY(-3px);
      box-shadow: var(--shadow);
    }

    .btn-primary {
      background-color: var(--primary);
      border-color: var(--primary);
    }

    .btn-primary:hover {
      background-color: var(--primary-dark);
      border-color: var(--primary-dark);
      transform: translateY(-3px);
      box-shadow: var(--shadow);
    }

    /* Hero Section */
    .features-hero {
      background: linear-gradient(135deg, rgba(255, 64, 129, 0.95) 0%, rgba(92, 107, 192, 0.85) 100%);
      color: white;
      padding: 160px 0 100px;
      text-align: center;
      position: relative;
      overflow: hidden;
    }

    .features-hero::before {
      content: "";
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background-image: url("data:image/svg+xml,%3Csvg width='60' height='60' viewBox='0 0 100 100' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M11 18c3.866 0 7-3.134 7-7s-3.134-7-7-7-7 3.134-7 7 3.134 7 7 7zm48 25c3.866 0 7-3.134 7-7s-3.134-7-7-7-7 3.134-7 7 3.134 7 7 7zm-43-7c1.657 0 3-1.343 3-3s-1.343-3-3-3-3 1.343-3 3 1.343 3 3 3zm63 31c1.657 0 3-1.343 3-3s-1.343-3-3-3-3 1.343-3 3 1.343 3 3 3zM34 90c1.657 0 3-1.343 3-3s-1.343-3-3-3-3 1.343-3 3 1.343 3 3 3zm56-76c1.657 0 3-1.343 3-3s-1.343-3-3-3-3 1.343-3 3 1.343 3 3 3zM12 86c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm28-65c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm23-11c2.76 0 5-2.24 5-5s-2.24-5-5-5-5 2.24-5 5 2.24 5 5 5zm-6 60c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm29 22c2.76 0 5-2.24 5-5s-2.24-5-5-5-5 2.24-5 5 2.24 5 5 5zM32 63c2.76 0 5-2.24 5-5s-2.24-5-5-5-5 2.24-5 5 2.24 5 5 5zm57-13c2.76 0 5-2.24 5-5s-2.24-5-5-5-5 2.24-5 5 2.24 5 5 5zm-9-21c1.105 0 2-.895 2-2s-.895-2-2-2-2 .895-2 2 .895 2 2 2zM60 91c1.105 0 2-.895 2-2s-.895-2-2-2-2 .895-2 2 .895 2 2 2zM35 41c1.105 0 2-.895 2-2s-.895-2-2-2-2 .895-2 2 .895 2 2 2zM12 60c1.105 0 2-.895 2-2s-.895-2-2-2-2 .895-2 2 .895 2 2 2z' fill='%23ffffff' fill-opacity='0.1' fill-rule='evenodd'/%3E%3C/svg%3E");
      opacity: 0.5;
      z-index: 1;
    }

    .features-hero .container {
      position: relative;
      z-index: 10;
    }

    .features-hero h1 {
      font-weight: 700;
      font-size: 2.8rem;
      margin-bottom: 1.5rem;
      opacity: 0;
      transform: translateY(30px);
      animation: fadeInUp 0.8s cubic-bezier(0.175, 0.885, 0.32, 1.275) forwards;
    }

    .features-hero p {
      font-size: 1.2rem;
      opacity: 0;
      max-width: 700px;
      margin: 0 auto 2rem;
      animation: fadeInUp 0.8s cubic-bezier(0.175, 0.885, 0.32, 1.275) 0.2s forwards;
    }

    .features-hero .btn {
      display: inline-block;
      padding: 15px 30px;
      border-radius: 30px;
      text-decoration: none;
      font-weight: 600;
      transition: all 0.3s cubic-bezier(0.175, 0.885, 0.32, 1.275);
      position: relative;
      overflow: hidden;
      opacity: 0;
      animation: fadeInUp 0.8s cubic-bezier(0.175, 0.885, 0.32, 1.275) 0.4s forwards;
    }

    .features-hero .btn::before {
      content: '';
      position: absolute;
      top: 50%;
      left: 50%;
      width: 0;
      height: 0;
      background: rgba(255, 255, 255, 0.2);
      border-radius: 50%;
      transform: translate(-50%, -50%);
      transition: width 0.6s, height 0.6s;
    }

    .features-hero .btn:hover::before {
      width: 300px;
      height: 300px;
    }

    .features-hero .btn:hover {
      transform: translateY(-5px) scale(1.03);
      box-shadow: 0 15px 25px rgba(0, 0, 0, 0.15);
    }

    /* Features Grid */
    .features-container {
      max-width: 1200px;
      margin: 3rem auto;
      padding: 0 20px;
    }

    .features-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
      gap: 30px;
      margin-top: 40px;
      padding-top: 20px;
    }

    .feature-card {
      background-color: white;
      border-radius: 15px;
      border-top: 5px solid transparent;
      box-shadow: var(--shadow);
      padding: 30px;
      text-align: center;
      transition: all 0.6s cubic-bezier(0.175, 0.885, 0.32, 1.275);
      position: relative;
      z-index: 1;
      overflow: hidden;
      opacity: 0;
      transform: translateY(30px);
    }

    .feature-card::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 0;
      background: linear-gradient(to bottom, rgba(255, 64, 129, 0.05), transparent);
      transition: height 0.5s ease;
      z-index: -1;
    }

    .feature-card:hover {
      transform: translateY(-20px);
      box-shadow: 0 20px 40px rgba(0, 0, 0, 0.2);
      border-top: 5px solid var(--primary);
    }

    .feature-card:hover::before {
      height: 100%;
    }

    .feature-icon {
      font-size: 2.5rem;
      color: white;
      background: linear-gradient(135deg, var(--primary) 0%, var(--secondary) 100%);
      width: 80px;
      height: 80px;
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      margin: 0 auto 1.5rem;
      box-shadow: 0 10px 20px rgba(255, 64, 129, 0.2);
      transition: all 2s cubic-bezier(0.175, 0.885, 0.32, 1.275);
    }

    .feature-card:hover .feature-icon {
      transform: rotate(360deg) scale(1.1);
      color: var(--primary-dark);
    }

    .feature-card h3 {
      color: var(--primary);
      margin-bottom: 1rem;
      font-weight: 600;
    }

    /* CTA Section */
    .features-cta {
      background: linear-gradient(135deg, rgba(255, 64, 129, 0.9) 0%, rgba(92, 107, 192, 0.9) 100%);
      color: white;
      padding: 4rem 0;
      text-align: center;
    }

    .features-cta h2 {
      font-weight: 700;
      margin-bottom: 1.5rem;
      opacity: 0;
      transform: translateY(30px);
      animation: fadeInUp 0.8s cubic-bezier(0.175, 0.885, 0.32, 1.275) forwards;
    }

    .features-cta p {
      opacity: 0;
      animation: fadeInUp 0.8s cubic-bezier(0.175, 0.885, 0.32, 1.275) 0.2s forwards;
    }

    .btn-cta {
      display: inline-block;
      padding: 15px 30px;
      border-radius: 30px;
      text-decoration: none;
      font-weight: 600;
      background-color: white;
      color: var(--primary);
      border: none;
      transition: all 0.3s cubic-bezier(0.175, 0.885, 0.32, 1.275);
      opacity: 0;
      animation: fadeInUp 0.8s cubic-bezier(0.175, 0.885, 0.32, 1.275) 0.4s forwards;
      position: relative;
      overflow: hidden;
    }

    .btn-cta::before {
      content: '';
      position: absolute;
      top: 50%;
      left: 50%;
      width: 0;
      height: 0;
      background: rgba(255, 255, 255, 0.2);
      border-radius: 50%;
      transform: translate(-50%, -50%);
      transition: width 0.6s, height 0.6s;
    }

    .btn-cta:hover::before {
      width: 300px;
      height: 300px;
    }

    .btn-cta:hover {
      transform: translateY(-5px) scale(1.03);
      box-shadow: 0 15px 25px rgba(0, 0, 0, 0.15);
    }

    /* Animations */
    @keyframes fadeInUp {
      from {
        opacity: 0;
        transform: translateY(30px);
      }

      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    @keyframes slideInLeft {
      from {
        opacity: 0;
        transform: translateX(-60px);
      }

      to {
        opacity: 1;
        transform: translateX(0);
      }
    }

    @keyframes slideInRight {
      from {
        opacity: 0;
        transform: translateX(60px);
      }

      to {
        opacity: 1;
        transform: translateX(0);
      }
    }

    /* Responsive design */
    @media (max-width: 992px) {
      .features-hero h1 {
        font-size: 2.3rem;
      }
    }

    @media (max-width: 768px) {
      .header-container {
        flex-direction: column;
        padding: 10px 15px;
      }

      .header-buttons {
        margin-top: 10px;
        width: 100%;
        justify-content: center;
      }

      .features-hero {
        padding: 120px 0 70px;
      }

      .features-hero h1 {
        font-size: 1.8rem;
        padding: 0 10px;
      }

      .features-hero p {
        font-size: 0.95rem;
        padding: 0 15px;
      }

      .features-container {
        margin: 2rem auto;
      }

      .features-grid {
        grid-template-columns: 1fr;
      }

      .feature-card {
        padding: 20px 15px;
        margin-bottom: 20px;
      }

      .feature-icon {
        width: 70px;
        height: 70px;
        font-size: 2rem;
        margin-bottom: 15px;
      }

      .feature-card h3 {
        font-size: 1.3rem;
      }

      .btn-cta {
        width: 100%;
        max-width: 280px;
      }
    }

    @media (max-width: 576px) {
      .header-container {
        flex-direction: column;
        padding: 10px 15px 5px;
      }

      .header-buttons {
        width: 100%;
        justify-content: space-between;
        margin-top: 10px;
      }

      .header-buttons .btn {
        flex: 1;
        margin: 0 5px;
        text-align: center;
        font-size: 0.9rem;
      }

      .features-hero h1 {
        font-size: 1.8rem;
      }

      .features-hero .btn {
        display: block;
        margin: 0 auto;
        max-width: 240px;
      }
    }

    /* Enhanced feature cards with better hover effects */
    .feature-card::after {
      content: '';
      position: absolute;
      bottom: 0;
      left: 0;
      width: 100%;
      height: 3px;
      background: var(--primary);
      transform: scaleX(0);
      transform-origin: left;
      transition: transform 0.8s ease;
      z-index: 1;
    }

    .feature-card:hover::after {
      transform: scaleX(1);
    }
  </style>
</head>

<body>
  <!-- Header -->
  <header>
    <div class="header-container">
      <div class="logo">
        <a href="/home">
          <i class="fas fa-shield-alt"></i>SAFEHer
        </a>
      </div>
      <div class="header-buttons">
        <a href="/home" class="btn btn-outline-primary">Home</a>
        <a href="/login" class="btn btn-primary">Login</a>
      </div>
    </div>
  </header>

  <!-- Hero Section -->
  <section class="features-hero">
    <div class="container">
      <h1>Your Safety, Our Priority</h1>
      <p>Discover the comprehensive safety features designed to protect you in any situation, powered by advanced AI
        technology.</p>
      <a href="/signup" class="btn btn-light btn-lg">Get Protected Today</a>
    </div>
  </section>

  <!-- Features Grid -->
  <div class="features-container">
    <div class="features-grid">
      <!-- Feature 1 -->
      <div class="feature-card" id="feature-1">
        <div class="feature-icon">
          <i class="fas fa-map-marker-alt"></i>
        </div>
        <h3>Real-Time Location Tracking</h3>
        <p>Share your exact location with trusted contacts in real-time with our precise GPS tracking system, ensuring
          help can always find you.</p>
      </div>

      <!-- Feature 2 -->
      <div class="feature-card" id="feature-2">
        <div class="feature-icon">
          <i class="fas fa-microphone"></i>
        </div>
        <h3>Voice Detection Alerts</h3>
        <p>Our AI-powered system listens for distress keywords and automatically triggers emergency alerts when danger
          is detected in your voice.</p>
      </div>

      <!-- Feature 3 -->
      <div class="feature-card" id="feature-3">
        <div class="feature-icon">
          <i class="fas fa-exclamation-triangle"></i>
        </div>
        <h3>Instant Panic Button</h3>
        <p>One-tap emergency alert that immediately notifies your contacts and authorities with your precise location
          and situation details.</p>
      </div>

      <!-- Feature 4 -->
      <div class="feature-card" id="feature-4">
        <div class="feature-icon">
          <i class="fas fa-bell"></i>
        </div>
        <h3>Smart Notifications</h3>
        <p>Receive proactive safety alerts about potentially dangerous areas based on your location and time of day.</p>
      </div>

      <!-- Feature 5 -->
      <div class="feature-card" id="feature-5">
        <div class="feature-icon">
          <i class="fas fa-route"></i>
        </div>
        <h3>Safe Route Suggestions</h3>
        <p>Our system analyzes your planned route and suggests safer alternatives based on real-time safety data.</p>
      </div>

      <!-- Feature 6 -->
      <div class="feature-card" id="feature-6">
        <div class="feature-icon">
          <i class="fas fa-brain"></i>
        </div>
        <h3>AI Risk Assessment</h3>
        <p>Continuous environmental analysis that evaluates potential threats and provides real-time safety scores for
          your location.</p>
      </div>
    </div>
  </div>

  <!-- CTA Section -->
  <section class="features-cta">
    <div class="container">
      <h2>Ready to Feel Safer?</h2>
      <p class="mb-4">Join thousands of women who trust SAFEHer for their personal safety.</p>
      <a href="/signup" class="btn-cta">Get Started Now</a>
    </div>
  </section>

  <!-- Scroll-to-top button -->
  <div id="scrollTopBtn"
    style="position: fixed; bottom: 20px; right: 20px; width: 45px; height: 45px; background: var(--primary); color: white; border-radius: 50%; display: flex; align-items: center; justify-content: center; box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2); cursor: pointer; opacity: 0; visibility: hidden; transition: all 0.3s ease; z-index: 99;">
    <i class="fas fa-arrow-up"></i>
  </div>

  <script>
    // Sticky header
    window.addEventListener('scroll', function () {
      const header = document.querySelector('header');
      header.classList.toggle('scrolled', window.scrollY > 50);
    });

    // Feature cards animation
    const featureCards = document.querySelectorAll('.feature-card');
    const featureObserver = new IntersectionObserver((entries) => {
      entries.forEach((entry, index) => {
        if (entry.isIntersecting) {
          // Apply different animations based on position
          if (index % 3 === 0) {
            entry.target.style.animation = 'slideInLeft 0.8s cubic-bezier(0.175, 0.885, 0.32, 1.275) forwards';
          } else if (index % 3 === 1) {
            entry.target.style.animation = 'fadeInUp 0.8s cubic-bezier(0.175, 0.885, 0.32, 1.275) forwards';
          } else {
            entry.target.style.animation = 'slideInRight 0.8s cubic-bezier(0.175, 0.885, 0.32, 1.275) forwards';
          }
          // Add delay based on index
          entry.target.style.animationDelay = `${0.2 * (index % 3)}s`;
          featureObserver.unobserve(entry.target);
        }
      });
    }, { threshold: 0.2 });

    featureCards.forEach(card => {
      featureObserver.observe(card);
    });

    // Card hover effects with slower animations
    featureCards.forEach(card => {
      card.addEventListener('mouseenter', function () {
        const icon = this.querySelector('.feature-icon');
        icon.style.transition = 'all 2s cubic-bezier(0.175, 0.885, 0.32, 1.275)';
        icon.style.transform = 'rotate(360deg) scale(1.1)';
      });

      card.addEventListener('mouseleave', function () {
        const icon = this.querySelector('.feature-icon');
        icon.style.transition = 'all 2s cubic-bezier(0.175, 0.885, 0.32, 1.275)';
        icon.style.transform = 'rotate(0deg) scale(1)';
      });
    });

    // Scroll-to-top functionality
    const scrollTopBtn = document.getElementById('scrollTopBtn');

    window.addEventListener('scroll', () => {
      if (window.scrollY > 300) {
        scrollTopBtn.style.opacity = '1';
        scrollTopBtn.style.visibility = 'visible';
      } else {
        scrollTopBtn.style.opacity = '0';
        scrollTopBtn.style.visibility = 'hidden';
      }
    });

    scrollTopBtn.addEventListener('click', () => {
      window.scrollTo({
        top: 0,
        behavior: 'smooth'
      });
    });
  </script>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>