<!DOCTYPE html>
<html>
<head>
  <title>Dashboard</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>
<body class="bg-light text-center p-5">

  <div class="container">
    <h1 class="mb-4">Welcome, <%= user.name %>!</h1>

    <div class="d-grid gap-3 col-6 mx-auto">

      <a href="/map/<%= user._id %>" class="btn btn-primary btn-lg">
        View My Location Map
      </a>

      <form action="/logout" method="get">
        <button type="submit" class="btn btn-danger btn-lg">
          Logout
        </button>
      </form>

    </div>
  </div>

</body>
<script>
    document.addEventListener("DOMContentLoaded", () => {
      const sendBtn = document.getElementById("sendLocationBtn");
      if (sendBtn) {
        sendBtn.addEventListener("click", () => {
          if (navigator.geolocation) {
            navigator.geolocation.getCurrentPosition((position) => {
              fetch("/location", {
                method: "POST",
                headers: {
                  "Content-Type": "application/json"
                },
                credentials: "include",
                body: JSON.stringify({
                  latitude: position.coords.latitude,
                  longitude: position.coords.longitude
                })
              })
              .then(res => res.json())
              .then(data => {
                console.log(data);
                alert("ðŸ“ Location sent successfully!");
              })
              .catch(err => {
                console.error(err);
                alert("âŒ Failed to send location");
              });
            });
          } else {
            alert("Geolocation is not supported by this browser.");
          }
        });
      }
  
      // Auto-send location on page load
      if (navigator.geolocation) {
        navigator.geolocation.getCurrentPosition((position) => {
          fetch("/location", {
            method: "POST",
            headers: {
              "Content-Type": "application/json"
            },
            credentials: "include",
            body: JSON.stringify({
              latitude: position.coords.latitude,
              longitude: position.coords.longitude
            })
          })
          .then(res => res.json())
          .then(data => {
            console.log("Auto-sent location:", data);
          })
          .catch(err => {
            console.error("Auto-location error:", err);
          });
        }, (error) => {
          console.warn("Geolocation error:", error.message);
        });
      } else {
        console.warn("Geolocation not supported");
      }
    });
  </script>
  
  
</html>
