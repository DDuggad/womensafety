  <!-- Mobile Sticky CTA -->
  <div class="mobile-sticky-cta d-md-none">
    <a href="/signup" class="cta-btn">Get Started Now</a>
  </div>

  <script>
    // Navigation toggle
    document.getElementById('hamburger').addEventListener('click', function () {
      const navLinks = document.querySelector('.nav-links');
      navLinks.classList.toggle('active');

      // Change icon based on state
      const icon = this.querySelector('i');
      if (navLinks.classList.contains('active')) {
        icon.className = 'fas fa-times';
      } else {
        icon.className = 'fas fa-bars';
      }
    });

    // Sticky header
    window.addEventListener('scroll', function () {
      const header = document.querySelector('header');
      header.classList.toggle('scrolled', window.scrollY > 50);
    });

    // Enhanced Animation on scroll
    const stepCards = document.querySelectorAll('.step-card');
    const walkthroughBoxes = document.querySelectorAll('.walkthrough-box');

    // Function to check if elements are in viewport and animate them
    function checkElementsInView() {
      const triggerBottom = window.innerHeight * 0.8;

      stepCards.forEach((card, index) => {
        const cardTop = card.getBoundingClientRect().top;

        if (cardTop < triggerBottom) {
          setTimeout(() => {
            if (index === 0) {
              card.style.animation = 'slideInLeft 0.8s cubic-bezier(0.175, 0.885, 0.32, 1.275) forwards';
            } else if (index === 1) {
              card.style.animation = 'fadeInUp 0.8s cubic-bezier(0.175, 0.885, 0.32, 1.275) forwards';
            } else {
              card.style.animation = 'slideInRight 0.8s cubic-bezier(0.175, 0.885, 0.32, 1.275) forwards';
            }
          }, index * 200);
        }
      });

      walkthroughBoxes.forEach((box, index) => {
        const boxTop = box.getBoundingClientRect().top;

        if (boxTop < triggerBottom) {
          setTimeout(() => {
            if (index % 2 === 0) {
              box.style.animation = 'fadeInUp 0.8s cubic-bezier(0.175, 0.885, 0.32, 1.275) forwards';
            } else {
              box.style.animation = 'fadeInUp 0.8s cubic-bezier(0.175, 0.885, 0.32, 1.275) forwards';
            }
          }, index * 300);
        }
      });
    }

    window.addEventListener('scroll', checkElementsInView);
    window.addEventListener('resize', checkElementsInView);

    // Check if elements are in view on page load
    window.addEventListener('load', function () {
      setTimeout(checkElementsInView, 100);
    });

    // Card hover effects with slower animations
    stepCards.forEach(card => {
      card.addEventListener('mouseenter', function () {
        const icon = this.querySelector('.step-icon');
        icon.style.transition = 'all 2s cubic-bezier(0.175, 0.885, 0.32, 1.275)';
        icon.style.transform = 'rotate(360deg) scale(1.1)';
      });

      card.addEventListener('mouseleave', function () {
        const icon = this.querySelector('.step-icon');
        icon.style.transition = 'all 2s cubic-bezier(0.175, 0.885, 0.32, 1.275)';
        icon.style.transform = 'rotate(0deg) scale(1)';
      });
    });

    // Add active state to current page link
    document.addEventListener('DOMContentLoaded', function () {
      const currentPath = window.location.pathname;
      const navLinks = document.querySelectorAll('.nav-links a');

      navLinks.forEach(link => {
        if (link.getAttribute('href') === currentPath) {
          link.style.color = 'var(--primary)';
          link.style.fontWeight = '700';
        }
      });
    });
  </script>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>

