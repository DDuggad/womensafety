      color: var(--primary);
    }

    .feature-title {
      font-size: 1.2rem;
      font-weight: 600;
      margin-bottom: 15px;
      color: var(--primary-dark);
    }

    /* Testimonial Section */
    .testimonial-section {
      padding: 80px 0;
      background-color: white;
      text-align: center;
    }

    .testimonial-cards {
      display: flex;
      flex-wrap: wrap;
      justify-content: center;
      gap: 30px;
      margin-top: 40px;
    }

    .testimonial-card {
      background-color: white;
      border-radius: 15px;
